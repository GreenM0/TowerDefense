<UserControl x:Class="TowerDefense.GameHandler"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TowerDefense"
        mc:Ignorable="d"
        Height="1080" Width="1920" Background="White">
    <Grid x:Name="MapGrid" Background="DarkGreen">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="75*"/>
            <ColumnDefinition Width="25*"/>
        </Grid.ColumnDefinitions>

        <Rectangle Grid.Column="1" Fill="Blue"/>

        <Canvas x:Name="GameField" Grid.Column="0"/>
    </Grid>
</UserControl>
